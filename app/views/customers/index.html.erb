<div class="container mt-5">



<div class=" my-3 d-flex justify-content-between">
  <div>
    <%= link_to "Add Customer", add_customer_path, class: "btn btn-info"%>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <button class="btn btn-info">Add order </button>
  </div>
  
 
     
     <input type="text" class="searchCustName" placeholder="Search by customer name" />




</div>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
       <th scope="col">
        
        <div class=" w-75 d-flex justify-content-between align-items-center m-auto">

            <span>Sr. No</span>

            <div class="sorting__functionality">
              

              <i class="ajax-request fa-solid fa-arrow-up" data-ordering="asc-created_at"></i>
              <i class="ajax-request fa-solid fa-arrow-down" data-ordering="desc-created_at"></i>

              
            </div>

          </div>
        
      
      
      </th>
      <th scope="col">

           <div class=" w-50 d-flex justify-content-between align-items-center m-auto">

            <span>Name</span>

            <div class="sorting__functionality">
             
              <i class="ajax-request fa-solid fa-arrow-up" data-ordering="asc-name"></i>
             <i class="ajax-request fa-solid fa-arrow-down" data-ordering="desc-name"></i>




            </div>

          </div>
      
      
      </th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="address__of">Address</th>
      <th scope="col">Order Count</th>

    </tr>
 
  </thead>
  
  <tbody class="customer__infomations">
    <% 
        pagenumber = params[:page].to_i  == 0 ? 1 : params[:page].to_i
        i = (pagenumber - 1).abs*10 + 1 
    %>
    <% @customer.each do |cust| %>

     <tr>
      <th scope="row"><%= i %></th>
      <td> <a href=/show-customer/<%= cust.id %>> <%= cust.name%> </a> </td>
      <td><%= cust.email %> </td>
      <td>+91-<%= cust.phone %> </td>
      <td class="address__of"><%= cust.address %> </td>
      <td>0</td>
    </tr>
      <% i=i+1 %>
    <% end %>
  
  </tbody>
</table>
<%= will_paginate @customer%>
</div>