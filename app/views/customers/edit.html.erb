<div class="container mt-5 w-50 border p-5 shadow">

    <h1 class="add__customer__heading mb-4">Update Customer</h1>

    <%= form_for @customer, url:update_customer_path(@customer.id), html: { method: :post } do |form| %>


        <% if @customer.errors.any? %>
            <div class="alert alert-danger">
                <% @customer.errors.full_messages.each do |message| %>
                <div>
                    <%= message %>
                </div>
                <% end %>
            </div>
        <% end %>




        <div class="mb-3">
            <%= form.label :name %>    
            <%= form.text_field :name, class: "form-control", value: @customer.name %>
        </div>

        <div class="mb-3">
            <%= form.label :email %>    
            <%= form.text_field :email, class: "form-control", value: @customer.email %>
        </div>

        <div class="mb-3">
            <%= form.label :phone %>    
            <%= form.text_field :phone, class: "form-control", value: @customer.phone %>
        </div>
        <div class="mb-3">
            <%= form.label :address %>    
            <%= form.text_field :address, class: "form-control", value: @customer.address %>
        </div>



        <div class="w-100 text-center pt-3 d-flex justify-content-between align-items-center">
            <%= form.submit "Update Customer" ,class: "btn btn-primary ml-5" %>
            <a href=/show-customer/<%= @customer.id %> >Go Back </a>
        </div>

        <div class="text-left pt-3">
        
        </div>


    <% end %>


</div>